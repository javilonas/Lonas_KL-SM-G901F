    write /sys/module/mhi/parameters/mhi_uci_dump 2
    write /sys/class/net/rmnet_mhi0/queues/rx-0/rps_cpus 1

on property:vold.decrypt=1
    mount tmpfs tmpfs /cpdump size=150M,mode=0700,uid=0,gid=0
